extends layout

block content
  // Page Content
  .container
    .row.justify-content-center
      .col-md-8.col-lg-6.mt-5
        .card
          .card-header Sign up
          .card-body
          form(action='/signup' method='POST')
            .form-group.row
              label.col-md-4.col-form-label.text-md-right(for='username') Username
              .col-md-6
                input#username.form-control(type='text' name='username' required='' autofocus='')
            .form-group.row
              label.col-md-4.col-form-label.text-md-right(for='password') Password
              .col-md-6
                input#password.form-control(type='password' name='password' required='')
            .form-group.row
              label.col-md-4.col-form-label.text-md-right(for='password2') Confirm password
              .col-md-6
                input#password.form-control(type='password' name='password2' required='')
            if error
                .alert.alert-danger.mx-5(role='alert') #{error}
            .row.justify-content-center
              .col-md-3
                button.btn.btn-primary.btn-block(type='submit') Sign up
            a.btn.btn-link.col-12(href='/signin') Already have an account? Sign in!
  // /.row
  // /.container